<div class="row">

    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>

            {{successMsg}}

        </div>
    </div>

</div>
<div class="row">
    {{# each products}}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{this.imagePath}}" alt="..." class="img-responsive">
                <div class="caption">
                    <h3>{{this.title}}</h3>
                    <p class="description">{{this.description}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">${{this.price}}</div>
                        <a href="/add-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add To Shopping Cart</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>

